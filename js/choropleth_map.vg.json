{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Suicide Rate",
    "fontSize": 20
  },
  "width": 1000,
  "height": 600,
  "projection": {"type": "equirectangular"},
  "params": [
    {
      "name": "Gender_selection",
      "value": "Both sexes",
      "bind": {
        "input": "select",
        "options": [
          "Both sexes",
          "Male",
          "Female"
        ],
        "labels": [
          "Total",
          "Male",
          "Female"
        ],
        "name": "Gender selection: "
      }
    },
    {
      "name": "Year_selection",
      "value": "2019",
      "bind": {
        "input": "range",
        "min": 2009,
        "max": 2019,
        "step": 1
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/pdmntrang/data-visualisation/main/data/suicide-rate.csv"
  },
  "layer":[
    {"transform": [
      {"calculate": "'Data is not available in ' + datum.Country", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {"transform": [
      {"lookup": "Country",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/pdmntrang/data-visualisation/main/js/ne_110m_admin_0_countries.topojson",
            "format": {
              "type": "topojson", 
              "feature": "ne_110m_admin_0_countries"}
          },
          "key": "properties.NAME"
        },
        "as": "geo"
      },
      {"filter": "Gender_selection == null || datum.Sex == Gender_selection"},
      {"filter": "datum.Year == Year_selection"}
    ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "shape": {
      "field": "geo",
      "type": "geojson"
    },
    "color": {
      "field": "Rate",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [5,10,20,40,80],
        "range": ["#fdd49e", "#fdcc8a", "#fc8d59", "#e34a33", "#b30000"]
      }
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "Rate", "type": "quantitative", "title": "Suicide Rate (%)", "format": ".2f"}
    ]
  }
}],
  "config": {}
}